<Page x:Class="LibraryManagementApplication.readerpage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryManagementApplication.ViewModel.ClassViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="readerpage">
    <Page.DataContext>
        <local:DocGiaViewModel/>
    </Page.DataContext>
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0"
              Background="#e6f3ff">
            <TextBlock Text="Quản lý độc giả " 
                       FontSize="50" 
                       FontWeight="Bold" 
                       FontFamily="roboto"
                       Foreground="#07209e"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Right"/>
        </Grid>
        <Grid Background="#e6f3ff"
              Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto" MaxHeight="150"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border Margin="40,20,40,10"
                    BorderBrush="#07209e"
                    BorderThickness="2"
                    HorizontalAlignment="Center"
                    CornerRadius="20"
                    Grid.ColumnSpan="2">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="10"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="110"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Tên độc giả:"
                               Style="{StaticResource textblock:style1}"
                               Grid.Column="0"
                               Grid.Row="1"
                               Margin="5"
                               HorizontalAlignment="Right"/>
                    <TextBox x:Name="tentb"
                             Grid.Column="1"
                             Grid.Row="1"
                             Margin="5"
                             Style="{StaticResource textbox:style1}"
                             Text="{Binding TenDG, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="Email: "
                               Style="{StaticResource textblock:style1}"
                               Grid.Column="0"
                               Grid.Row="2"
                               Margin="5"
                               HorizontalAlignment="Right"/>
                    <TextBox x:Name="emailtb"
                             Grid.Column="1"
                             Grid.Row="2"
                             Style="{StaticResource textbox:style1}"
                             Margin="5"
                             Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="CCCD: "
                               Style="{StaticResource textblock:style1}"
                               Grid.Column="2"
                               Grid.Row="1"
                               Margin="5"
                               HorizontalAlignment="Right"/>
                    <TextBox x:Name="cccdtb"
                             Grid.Column="3"
                             Grid.Row="1"
                             Style="{StaticResource textbox:style1}"
                             Margin="5"
                             Text="{Binding CCCD, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="SDT: "
                               Style="{StaticResource textblock:style1}"
                               Grid.Column="2"
                               Grid.Row="2"
                               Margin="5"
                               HorizontalAlignment="Right"/>
                    <TextBox x:Name="sdttb"
                             Grid.Column="3"
                             Grid.Row="2"
                             Style="{StaticResource textbox:style1}"
                             Margin="5"
                             Text="{Binding SDT, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <Grid Grid.Row="3"
                          Grid.Column="0"
                          Grid.ColumnSpan="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Button  x:Name="addtaikhoan"
                                 Content="Thêm DG"
                                 Margin="5"        
                                 Style="{DynamicResource button:add}"
                                 Command="{Binding AddCommand}"/>
                        <Button x:Name="history"
                                Content="Lịch sử"
                                Grid.Column="2"
                                Style="{StaticResource button:history}"
                                Visibility="Collapsed"
                                Click="Button_Click"/>
                        <Button x:Name="findsach"
                                Content="Tìm DG"
                                Grid.Column="6"
                                Margin="5"      
                                Style="{DynamicResource button:find}"
                                Command="{Binding SearchCommand}"/>
                        <Button x:Name="showsach"
                                Content="Hiển thị"
                                Grid.Column="8"
                                Margin="5"
                                Style="{DynamicResource button:show}"
                                Command="{Binding ShowCommand}"
                                Click="showsach_Click"/>
                        <Button x:Name="exportsach"
                                Content="Xuất file"
                                Grid.Column="10"
                                Margin="5"
                                Style="{DynamicResource button:export}"
                                Click="export_Click"/>
                    </Grid>
                </Grid>
            </Border>
            <Grid x:Name="donmuongrid" Margin="5"
                  Grid.Row="1"
                  Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Sách" Style="{StaticResource textblock:style1}"/>
                <DataGrid x:Name="datagridMuon"
                          Grid.Row="1"
                          SelectedItem="{Binding SelectedDonMuon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                          ItemsSource="{Binding DonMuonList}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã đơn mượn" Width="*" Binding="{Binding MaMuon}"/>
                        <DataGridTextColumn Header="Mã độc giả" Width="*" Binding="{Binding MaDG}"/>
                        <DataGridTextColumn Header="Ngày mượn" Width="*" Binding="{Binding NgayMuon, StringFormat='dd/MM/yyyy'}"/>
                        <DataGridTextColumn Header="Ngày trả dự kiến" Width="*" Binding="{Binding NgayTraDK, StringFormat='dd/MM/yyyy'}"/>
                        <DataGridTextColumn Header="Ngày trả thực tế" Width="*" Binding="{Binding NgayTraTT, StringFormat='dd/MM/yyyy'}"/>
                        <DataGridTextColumn Header="Phí phạt (VND)" Width="*" Binding="{Binding PhiPhat}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            <Grid x:Name="ctdmgrid" Grid.Row="1"
                  Grid.Column="1" 
                  Margin="5"
                  Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Chi tiết đơn mượn" Style="{StaticResource textblock:style1}"/>
                <DataGrid x:Name="sach" 
                          Grid.Row="1"
                          ItemsSource="{Binding DanhSachMuon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Sách" Width="*" Binding="{Binding TenDauSach}"/>
                        <DataGridTextColumn Header="IBSN" Width="*" Binding="{Binding ISBN}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            <Grid Margin="5"
                  Grid.Row="2"
                  Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Độc giả" Style="{StaticResource textblock:style1}"/>
                <DataGrid x:Name="docgia"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Grid.Row="1"
                          SelectedItem="{Binding SelectedDocGia, Mode=OneWayToSource}"
                          ItemsSource="{Binding DocGiaList}"
                          SelectedCellsChanged="docgia_SelectedCellsChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã độc giả" Width="*" Binding="{Binding MaDG}" />
                        <DataGridTextColumn Header="Tên độc giả" Width="3*" Binding="{Binding TenDG}" />
                        <DataGridTextColumn Header="Email" Width="*" Binding="{Binding Email}" />
                        <DataGridTextColumn Header="CCCD" Width="*" Binding="{Binding CCCD}" />
                        <DataGridTextColumn Header="SDT" Width="*" Binding="{Binding SDT}" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</Page>
