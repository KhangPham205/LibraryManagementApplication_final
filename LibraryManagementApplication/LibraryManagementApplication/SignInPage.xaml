<Page x:Name="signInPage"
      x:Class="LibraryManagementApplication.SignInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LibraryManagementApplication.ViewModel"
      xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
      mc:Ignorable="d" 
      Height="auto" Width="auto"
      Title="SignInPage">
    <Page.DataContext>
        <local:LoginViewModel/>
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Text="Đăng Nhập"
            FontSize="50"
            FontWeight="Bold"
            FontFamily="roboto"
            Foreground="#07209e"
            HorizontalAlignment="Center"
            Margin="0,10,0,10"/>
        <Grid x:Name="parent"
        Grid.Row="1"
        Margin="10,0,10,0" Height="190" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <fa:IconImage Icon="UserAlt"
            Height="40"
            Width="40"
            Foreground="#07209e"
            Grid.Column="1"
            Grid.Row="1"
            Margin="10"/>
            <fa:IconImage Icon="Key"
            Height="40"
            Width="40"
            Foreground="#07209e"          
            Grid.Column="1"
            Grid.Row="2"
            Margin="5"/>
            <TextBox x:Name="userid"
                     Grid.Column="2"
                     Grid.Row="1"
                Style="{StaticResource textbox:style1}"
                Text="{Binding UserID}"/>
            <Border
                    Background="White"
                    BorderBrush="#07209e"
                    BorderThickness="1"
                    CornerRadius="10"
                    Height="40"
                    Grid.Column="2"
                    Grid.Row="2">
                <PasswordBox x:Name="password"
                    FontSize="18"
                    FontWeight="Medium"
                    Margin="5"
                    BorderBrush="Transparent"
                    Background="white"
                    BorderThickness ="0"
                    local:PasswordBoxHelper.BindPassword="{Binding Password, Mode=TwoWay}"></PasswordBox>
            </Border>
            <TextBox x:Name="visiblepassword"
                Style="{StaticResource textbox:style1}"
                      Grid.Column="2"
                        Grid.Row="2"
                Visibility="Collapsed">
            </TextBox>
            <CheckBox x:Name="see"
                Grid.Row="2"
                Grid.Column="3"
                Margin="10,15,10,15"
                Style="{StaticResource ImageCheckBoxStyle}"
                Checked="see_Checked"
                Unchecked="see_Unchecked">
            </CheckBox>
            <Button x:Name="signin"
                    Style="{StaticResource button:style1}"
                    Content="Đăng nhập"
                    Grid.Column="2"
                    Grid.Row="3"
                    Width="250"
                    Command="{Binding LoginCommand}"
                    CommandParameter="{Binding ElementName=signInPage}"
                    Click="see_Unchecked">
            </Button>
        </Grid>
    </Grid>
</Page>
