        <!--Style textbox thông thường-->
        <Style TargetType="TextBox" x:Key="textbox:style1">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border
                             Background="White"
                             BorderBrush="#07209e"
                             BorderThickness="1"
                             CornerRadius="10"
                             Height="40">
                            <TextBox x:Name="tb"
                               FontSize="18"
                               FontWeight="Medium"
                               Margin="5"
                               BorderBrush="Transparent"
                               Background="white"
                               BorderThickness ="0"
                               Text="{Binding Path = Text, RelativeSource={RelativeSource AncestorType=TextBox}}"
                               ></TextBox>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="tb" Property="BorderBrush" Value="#07209e"/>
                                <Setter TargetName="tb" Property="BorderThickness" Value="0,0,0,2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--Style cho combobox thông thường-->
        <Style TargetType="ComboBox" x:Key="combobox:style1">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border x:Name="Border"
                         Background="White"
                         BorderBrush="#07209e"
                         BorderThickness="1"
                         CornerRadius="10"
                         Height="40">
                            <ComboBox x:Name="cb"
                                FontSize="18"
                                FontWeight="Medium"
                                Margin="5"
                                BorderBrush="Transparent"
                                Background="white"
                                BorderThickness ="0"
                                Text="{Binding Path = Text, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                ItemsSource="{Binding Path = ItemsSource, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                                IsEditable="True">
                            </ComboBox>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="cb" Property="BorderBrush" Value="#07209e"/>
                                <Setter TargetName="cb" Property="BorderThickness" Value="0,0,0,2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!--Style datpicker thông thường-->
        <Style TargetType="DatePicker" x:Key="datepick:style1">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Border 
                             Background="White"
                             BorderBrush="#07209e"
                             BorderThickness="1"
                             CornerRadius="10"
                             Height="40">
                            <DatePicker x:Name="tb"
                               FontSize="18"
                               FontWeight="Medium"
                               Margin="5"
                               BorderBrush="Transparent"
                               Background="white"
                               BorderThickness ="0"
                               Text="{Binding Path = Text, RelativeSource={RelativeSource AncestorType=DatePicker}}"
                               SelectedDate="{Binding Path = SelectedDate, RelativeSource={RelativeSource AncestorType=DatePicker}}">
                            </DatePicker>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="tb" Property="BorderBrush" Value="#07209e"/>
                                <Setter TargetName="tb" Property="BorderThickness" Value="0,0,0,2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
