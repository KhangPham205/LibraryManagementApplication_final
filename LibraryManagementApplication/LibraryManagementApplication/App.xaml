        </Style>
        <!-- Style for DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#07209e"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="RowBackground" Value="#FFFFFF"/>
            <Setter Property="AlternatingRowBackground" Value="#e6f3ff"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
        </Style>
        <!-- Style for DataGridHeader -->
        <Style TargetType="DataGridRowHeader">
            <Setter Property="Background" Value="White"/>
        </Style>
        <!-- Style for DataGridHeader -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#9acbff"/>
            <Setter Property="Foreground" Value="#07209e"/>
            <Setter Property="BorderBrush" Value="#07209e"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="2,0,2,0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <!--Style for rbutton của mainpage-->
        <Style TargetType="RadioButton" x:Key="rbutton:main">
            <Setter Property="Height" Value="100"/>
            <Setter Property="Width" Value="130" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="Background" Value="#9acbff"/>
            <Setter Property="Foreground" Value="#07209e"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        Margin="5"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#07209e"/>
                                <Setter Property="Foreground" Value="#d4ebf8"/>
                            </Trigger>

                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="#07209e"/>
                                <Setter Property="Foreground" Value="#d4ebf8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Template for the Image CheckBox -->
        <Style TargetType="CheckBox" x:Key="ImageCheckBoxStyle" >
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <!-- Define the images for different states -->
                            <fa:IconImage x:Name="UncheckedImage" Icon="EyeLowVision" Foreground="#07209e" Stretch="Uniform"/>
                            <fa:IconImage x:Name="CheckedImage" Icon="Eye" Foreground="#07209e" Stretch="Uniform" Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Show the appropriate image based on IsChecked -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckedImage" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="UncheckedImage" Property="Visibility" Value="Collapsed"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="CheckedImage" Property="Visibility" Value="Collapsed"/>
                                <Setter TargetName="UncheckedImage" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>