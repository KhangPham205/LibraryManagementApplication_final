        </Style>
        <!-- Style cho TextBlock trong Menu-->
        <Style TargetType="TextBlock" x:Key="textblock:menu" >
            <Setter Property="Foreground" Value="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType=RadioButton}}" />
            <Setter Property="FontWeight" Value="Medium" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <!-- Style cho RadioButton trong Menu-->
        <Style TargetType="RadioButton" x:Key="rbutton:menu">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="190" />
            <Setter Property="Margin" Value="-10,0,0,5" />
            <Setter Property="Background" Value="#9acbff"/>
            <Setter Property="Foreground" Value="#07209e"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            CornerRadius="0,5,5,0">
                            <ContentPresenter HorizontalAlignment="Left" 
                                VerticalAlignment="Center"
                                Margin="20,0,0,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Margin" Value="0,0,0,5"/>
                                <Setter Property="Background" Value="#07209e"/>
                                <Setter Property="Foreground" Value="#d4ebf8"/>
                            </Trigger>

                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Margin" Value="0,0,0,5"/>
                                <Setter Property="Background" Value="#07209e"/>
                                <Setter Property="Foreground" Value="#d4ebf8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
